<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>0.1.0</Version>
        <Title>Documentation Parser</Title>
        <Authors>Pygmalions</Authors>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Description>Parser and models for documentation files generated by .NET compiler.</Description>
        <PackageProjectUrl>https://github.com/Pygmalions/DocumentationParser</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Pygmalions/DocumentationParser</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>Documentation; Documentation-Parser;</PackageTags>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
